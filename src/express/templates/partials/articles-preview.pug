h2.visually-hidden Список превью статей
ul.preview__list
  each article in articles
    li.preview__item
      ul.preview__breadcrumbs
        each category in article.categories
          li.preview__breadcrumbs-item
            a.preview__breadcrumbs-link(href='/categories/' + category.id) #{category.name}
      .preview__background
        img.preview__background-image(
          src='/img/' + article.picture
          width='460'
          height='240'
          srcset='/img/' + article.picture
          alt=article.title
        )
      time.preview__time(datetime=article.createdAt)
        +formatDate(article.createdAt)
      h3.preview__name
        a.preview__name-link(href='/articles/' + article.id) #{article.title}
      p.preview__text #{article.announce}
      a.preview__comment(href='/articles/' + article.id + '/comments/')
        | Комментарии
        span.preview__cloud
        |
        b.preview__comment-count #{article.comments.length}
